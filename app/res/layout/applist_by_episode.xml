<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:padding="@dimen/std_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/std_padding"
        android:background="@drawable/card_shadow">

        <!-- Episode Number -->
        <com.sage42.android.view.fonts.MyTextView
            android:id="@+id/episode_number"
            style="@style/AppTheme.AppList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/std_padding"
            android:text="@string/applist_default_episode_number"
            android:textColor="@color/green"
            android:textSize="50sp" />

        <!-- Episode Title -->
        <com.sage42.android.view.fonts.MyTextView
            android:id="@+id/episode_title"
            style="@style/AppTheme.AppList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/episode_number"
            android:ellipsize="end"
            android:paddingTop="@dimen/twelve_padding"
            android:singleLine="true"
            android:text="@string/applist_default_episode_title"
            android:textSize="18sp" />

        <!-- Episode Duration -->
        <TextView
            android:id="@+id/episode_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/episode_title"
            android:layout_toRightOf="@+id/episode_number"
            android:text="@string/applist_episode_duration"
            android:textColor="@color/general_text_light"
            android:textSize="14sp" />

        <!-- Episode Length -->
        <com.sage42.android.view.fonts.MyTextView
            android:id="@+id/episode_duration_length"
            style="@style/AppTheme.AppList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/episode_title"
            android:layout_toRightOf="@+id/episode_duration"
            android:paddingLeft="2dp"
            android:text="@string/applist_default_episode_duration_length"
            android:textColor="@color/general_text_light"
            android:textSize="14sp" />

        <!-- Episode Added -->
        <TextView
            android:id="@+id/episode_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/episode_title"
            android:layout_toRightOf="@+id/episode_number"
            android:paddingLeft="110dp"
            android:text="@string/applist_episode_add"
            android:textColor="@color/general_text_light"
            android:textSize="14sp" />

        <!-- Episode Date Added -->
        <com.sage42.android.view.fonts.MyTextView
            android:id="@+id/episode_add_date"
            style="@style/AppTheme.AppList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/episode_title"
            android:layout_toRightOf="@+id/episode_add"
            android:paddingLeft="2dp"
            android:text="@string/applist_default_episode_add_date"
            android:textColor="@color/general_text_light"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>