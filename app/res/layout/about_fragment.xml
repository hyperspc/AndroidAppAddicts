<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_padding" >

        <ImageView
            android:id="@+id/about_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/about_company_photo"
            android:paddingBottom="@dimen/about_logo_padding_bottom"
            android:paddingTop="@dimen/about_logo_padding_top"
            android:src="@drawable/about_logo" />

        <LinearLayout
            android:id="@+id/about_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_logo"
            android:orientation="vertical" >

            <View
                style="@style/AppTheme.About.Hr"
                android:layout_width="match_parent" />

            <com.sage42.android.view.fonts.MyTextView
                android:id="@+id/about_hotline"
                style="@style/AppTheme.About.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_phone"
                android:text="@string/about_call" />

            <View
                style="@style/AppTheme.About.Hr"
                android:layout_width="match_parent" />

            <com.sage42.android.view.fonts.MyTextView
                android:id="@+id/about_email"
                style="@style/AppTheme.About.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_email"
                android:text="@string/about_email" />

            <View
                style="@style/AppTheme.About.Hr"
                android:layout_width="match_parent" />

            <com.sage42.android.view.fonts.MyTextView
                android:id="@+id/about_gplus"
                style="@style/AppTheme.About.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_gplus"
                android:text="@string/about_follow_us" />

            <View
                style="@style/AppTheme.About.Hr"
                android:layout_width="match_parent" />

            <com.sage42.android.view.fonts.MyTextView
                android:id="@+id/about_participate"
                style="@style/AppTheme.About.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_social"
                android:text="@string/about_participate" />

            <View
                style="@style/AppTheme.About.Hr"
                android:layout_width="match_parent" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>