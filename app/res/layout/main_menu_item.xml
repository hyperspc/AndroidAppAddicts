<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height"
    android:background="@drawable/listview_background"
    android:paddingLeft="@dimen/menu_item_drawable_padding"
    android:paddingRight="@dimen/menu_item_padding" >

    <com.sage42.android.view.fonts.MyTextView
        android:id="@+id/menu_item_content"
        style="@style/AppTheme.MenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/ic_launcher"
        android:drawablePadding="@dimen/menu_item_drawable_padding"
        android:text="@string/main_menu_default_content" />

</RelativeLayout>