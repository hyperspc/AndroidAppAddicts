<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_item_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_weight="1"
    android:background="@drawable/card_shadow" >

    <com.sage42.androidappaddicts.app.hosts.CustomGridImageView
        android:id="@+id/applist_row_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/list_activated_holo" />

    <TextView
        android:id="@+id/applist_row_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/applist_row_item_image"
        android:ellipsize="end"
        android:paddingTop="@dimen/std_padding"
        android:singleLine="true"
        android:text="@string/applist_default_app_name"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/applist_row_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/applist_row_item_title"
        android:ellipsize="end"
        android:paddingBottom="@dimen/std_padding"
        android:singleLine="true"
        android:text="@string/applist_default_app_author"
        android:textSize="12sp" />

    <RatingBar
        android:id="@+id/applist_row_item_rating_star"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/applist_row_item_desc"
        android:layout_alignLeft="@+id/applist_row_item_desc"
        android:layout_toLeftOf="@+id/applist_row_item_price"
        android:isIndicator="false"
        android:numStars="5" />

    <TextView
        android:id="@+id/applist_row_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/applist_row_item_image"
        android:layout_below="@+id/applist_row_item_desc"
        android:text="@string/applist_default_app_price"
        android:textColor="@android:color/holo_green_light"
        android:textSize="12sp" />

</RelativeLayout>