<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.AppList">
        <item name="fontFamily">Roboto-Light</item>
    </style>

    <style name="AppTheme.AppList.TinyButton">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">@dimen/std_hlf_padding</item>
        <item name="android:background">@android:color/holo_green_light</item>
    
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
   </style>
    <style name="AppTheme.AppList.ShowNumber">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="AppTheme.AppList.ShowTitle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppList.DetailsLabel">
        <item name="android:textColor">@color/general_text_light</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">Roboto</item>
    </style>

    <style name="AppTheme.AppList.DetailsValue">
        <item name="android:textColor">@color/general_text_light</item>
        <item name="android:textSize">14sp</item>

    </style>

</resources>