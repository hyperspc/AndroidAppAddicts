<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.AppList"></style>

    <style name="AppTheme.AppList.TinyButton">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/std_half_padding</item>
        <item name="android:background">@color/green_background</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppList.ShowNumber">
        <item name="android:textSize">50sp</item>
    </style>
    
    <style name="AppTheme.AppList.ShowNumber.Green">
        <item name="android:textColor">@color/green</item>
    </style>
    
    <style name="AppTheme.AppList.ShowNumber.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppList.ShowTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.AppList.DetailsLabel">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">Roboto-Regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginRight">@dimen/std_half_padding</item>
    </style>

    <style name="AppTheme.AppList.DetailsLabel.Light">
        <item name="android:textColor">@color/general_text_light</item>
    </style>

    <style name="AppTheme.AppList.DetailsLabel.LightGray">
        <item name="android:textColor">@color/general_text_light_gray</item>
    </style>

    <style name="AppTheme.AppList.DetailsValue">
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppList.DetailsValue.Light">
        <item name="android:textColor">@color/general_text_light</item>
    </style>

    <style name="AppTheme.AppList.DetailsValue.LightGray">
        <item name="android:textColor">@color/general_text_light_gray</item>
    </style>

    <style name="AppTheme.AppList.RowTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.AppList.RowDesc">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">9sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

        <style name="AppTheme.AppList.RowPrice">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">9sp</item>
        <item name="fontFamily">Roboto-Regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>