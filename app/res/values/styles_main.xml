<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.Menu">
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="AppTheme.MenuItem">
        <item name="android:minHeight">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/std_padding</item>
        <item name="android:textColor">@color/general_text_primary</item>
        <item name="android:textSize">@dimen/listview_text_size</item>
    </style>

    <style name="AppTheme.MenuItem.Title">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/listview_text_size</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:textColor">@color/general_text_primary</item>
    </style>

</resources>