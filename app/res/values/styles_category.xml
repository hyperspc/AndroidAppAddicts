<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.Category"></style>

    <style name="AppTheme.Category.Name">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">@dimen/content_padding</item>
        <item name="android:paddingRight">@dimen/content_padding</item>
        <item name="android:background">@drawable/btn_click_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">64dp</item>
    </style>

    <style name="AppTheme.Category.Hr">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/general_divider_color</item>
    </style>

    <style name="AppTheme.Category.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Category.Publisher">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Category.Price">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/holo_green_light</item>
    </style>

    <style name="AppTheme.Category.Item">
        <item name="android:minHeight">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>