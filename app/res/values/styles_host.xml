<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.Host">
        <item name="fontFamily">Roboto-Light</item>
    </style>

    <style name="AppTheme.Host.Name">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/general_text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.Host.Desc">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/general_text_primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.Host.Item">
        <item name="android:paddingTop">@dimen/std_padding</item>
        <item name="android:paddingLeft">@dimen/std_half_padding</item>
        <item name="android:paddingRight">@dimen/std_half_padding</item>
    </style>

</resources>