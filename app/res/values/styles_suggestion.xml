<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.Suggestion"></style>

    <style name="AppTheme.Suggestion.EditText">
        <item name="fontFamily">Roboto-Light</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColorHint">@color/general_text_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Suggestion.MenuItemCheck">
        <item name="android:minHeight">64dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Suggestion.MenuItem">
        <item name="fontFamily">Roboto-Light</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/std_padding</item>
        <item name="android:textColor">@color/general_text_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>